
<div class="text-inline">
  <h1><%= @task.title %></h1>
  <div class="btn btn-light">
    <%= link_to '<i class="fa fa-pencil" aria-hidden="true"> Edit this task</i>'.html_safe, edit_task_path(@task.id)%>
